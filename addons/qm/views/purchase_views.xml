<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <record id="view_purchase_order_form_qm" model="ir.ui.view">
        <field name="name">purchase.order.inherit.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button type="object"
                    name="action_view_payment_register"
                    class="oe_stat_button"
                    icon="fa-paper-plane-o" attrs="{'invisible':[('payment_register_ids','=',[])]}">
                    <field name="payment_register_count" widget="statinfo" string="Payment Register Count" help="Click to review detail"/>
                    <field name="payment_register_ids" invisible="1"/>
                </button>
            </xpath>

            <field name="action_view_invoice" position="attributes">
              <attribute name="groups">qm.group_hidden_menu</attribute>
            </field>
          <field name="state" position="before">
            <button name="action_create_purchase_payment_register" string="Create Purchase Payment Register" type="object"/>
          </field>
            <field name="price_subtotal" position="replace">
                <field name="price_total" widget="monetary"/>
            </field>
            <field name="partner_ref" position="after">
                <field name="sale_order_ids"
                       widget="many2many_tags"
                       options="{'no_create_edit': True}"/>
            </field>
            <field name="origin" position="replace">
              <field name="is_dropshipping"/>
            </field>
            <field name="company_id" position="after">
                <field name="payment_state"/>
            </field>
        </field>
    </record>

    <record id="view_purchase_order_tree_qm" model="ir.ui.view">
        <field name="name">purchase.order.tree.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
          <field name="date_approve" position="after">
            <field name="is_dropshipping"/>
          </field>
          <field name="state" position="after">
            <field name="payment_state"/>
          </field>
        </field>
    </record>


    <record id="view_purchase_request_from" model="ir.ui.view">
        <field name="name">purchase.request.form</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <form string="Purchase Request" class="o_purchase_request">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_purchase_line" type="object"
                                class="oe_stat_button" icon="fa-shopping-cart"
                                attrs="{'invisible': [('purchase_line_count', '=', 0)]}">
                            <field name="purchase_line_count" widget="statinfo" string="Purchase Line Count"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_dropshipping"/>
                            <field name="sale_line_id"/>
                            <field name="sale_order_id"/>
                            <field name="customer_id"/>
                            <field name="partner_ids" invisible="1"/>
                            <field name="partner_id" domain="[('id','in', partner_ids)]"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="product_uom"/>
                            <field name="product_uom_qty"/>
                            <field name="qty_purchased"/>
                            <field name="qty_to_purchase"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_purchase_request_tree" model="ir.ui.view">
        <field name="name">purchase.request.tree</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state=='cancel'" decoration-success="state=='done'">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="is_dropshipping"/>
                <field name="product_id"/>
                <field name="product_uom_qty"/>
                <field name="product_uom"/>
                <field name="qty_purchased"/>
                <field name="qty_to_purchase"/>
                <field name="customer_id"/>
                <field name="partner_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_purchase_request_search" model="ir.ui.view">
        <field name="name">purchase.request.search</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <search string="Search Purchase Request">
                <field name="name"/>
                <field name="product_id"/>
                <field name="customer_id"/>
                <field name="partner_id"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter string="Partner" name="partner_id" context="{'group_by': 'partner_id'}"/>
                    <filter string="Customer" name="customer_id" context="{'group_by': 'customer_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="purchase_request_action" model="ir.actions.act_window">
        <field name="name">Purchase Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.request</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_purchase_request_tree"/>
        <field name="search_view_id" ref="view_purchase_request_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
          </p>
        </field>
    </record>
    <menuitem action="purchase_request_action" id="menu_purchase_request_action"
              parent="purchase.menu_procurement_management" sequence="0"/>



    <record id="view_purchase_order_line_tree_qm" model="ir.ui.view">
      <field name="name">purchase.order.line.tree.inherit</field>
      <field name="model">purchase.order.line</field>
      <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//tree" position="attributes">
          <attribute name="decoration-success">
            qty_to_receipt == 0
          </attribute>
          <attribute name="decoration-muted">
            state in ['draft', 'cancel']
          </attribute>
        </xpath>
        <field name="date_planned" position="replace">
          <field name="qty_receipt"/>
          <field name="qty_to_receipt"/>
          <field name="state" invisible="1"/>
        </field>
      </field>
    </record>

    <record id="action_purchase_order_line" model="ir.actions.act_window">
        <field name="name">Purchase Lines</field>
        <field name="res_model">purchase.order.line</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="purchase.purchase_order_line_tree"/>
        <field name="search_view_id" ref="purchase.purchase_order_line_search"/>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face"></p>
        </field>
    </record>

    <menuitem id="menu_purchase_invoice_management" name="Invoices" parent="purchase.menu_purchase_root" sequence="2" />
    <menuitem action="action_purchase_order_line" id="menu_purchase_order_line_qm" parent="menu_purchase_invoice_management" sequence="0"/>

    <menuitem action="action_account_purchase_invoice_qm" id="menu_purchase_purchase_invoice_qm" parent="menu_purchase_invoice_management" sequence="2"/>

    <record id="action_create_purchase_order_from_list" model="ir.actions.server">
      <field name="name">Create Purchase Order</field>
      <field name="model_id" ref="purchase.model_purchase_order"/>
      <field name="binding_model_id" ref="qm.model_purchase_request"/>
      <field name="binding_view_types">list</field>
      <field name="state">code</field>
      <field name="code">
        action = model.action_create_purchase_order()
      </field>
    </record>


</odoo>
