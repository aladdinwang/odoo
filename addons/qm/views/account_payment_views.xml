<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_tree_qm" model="ir.ui.view">
        <field name="name">account.payment.tree.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="replace">
                <field name="communication"/>
            </field>
            <field name="payment_method_id" position="replace"/>
            <field name="amount" position="after">
                <field name="overpayment_amount" optional="show"/>
            </field>
        </field>
    </record>

    <record id="view_account_payment_form_qm" model="ir.ui.view">
        <field name="name">account.payment.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <field name="payment_method_code" position="after">
                <field name="overpayment_amount" attrs="{'invisible': [('state', '=', 'draft')]}"/>
            </field>
        </field>
    </record>

</odoo>