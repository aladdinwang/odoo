<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="qm_view_picking_form" model="ir.ui.view">
        <field name="name">qm.stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="express_code"/>
            </field>
        </field>
    </record>

    <record id="qm_view_picking_tree" model="ir.ui.view">
        <field name="name">qm.stock.picking.tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="express_code" optional="show"/>
            </field>
        </field>
    </record>

</odoo>

