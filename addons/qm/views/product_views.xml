<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <record id="view_product_form_qm" model="ir.ui.view">
        <field name="name">product.category.inherit.form</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="code" class="oe_inline"/>
                <field name="tax_classification_id" class="oe_inline"/>
            </field>
        </field>
    </record>

    <record id="view_product_template_form_qm" model="ir.ui.view">
        <field name="name">product.template.inherit.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="uom_id" position="attributes">
                <attribute name="options">{'no_create': False}</attribute>
            </field>
            <field name="uom_po_id" position="attributes">
                <attribute name="options">{'no_create': False}</attribute>
            </field>
        </field>
    </record>


    <menuitem id="menu_product_category_action_sale"
        action="product.product_category_action_form"
        parent="sale.prod_config_main" sequence="0"/>
</odoo>