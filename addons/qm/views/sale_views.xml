<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <record id="view_order_tree_qm" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <field name="invoice_status" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>
            <field name="invoice_status" position="after">
                <field name="invoice_state" optional="show"/>
                <field name="payment_state" optional="show"/>
            </field>
        </field>
    </record>

    <record id="view_order_form_qm" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
             <xpath expr="//button[@name='action_draft']" position="after">
                 <button name="action_to_invoice" type="object" string="To Invoice" confirm="Are you sure"
                         attrs="{'invisible': ['|', ('invoice_state', '!=', 'pending'), '|', ('state', 'not in', ['sale', 'done']), ('invoice_status', '=', 'to invoice')]}"/>
             </xpath>

            <field name="partner_id" position="after">
                <field name="is_dropshipping"/>
                <field name="outer_name"/>
            </field>
            <field name="payment_term_id" position="after">
                <field name="invoice_state"/>
                <field name="payment_state"/>
            </field>
        </field>
    </record>

    <record id="view_sales_order_filter_qm" model="ir.ui.view">
        <field name="name">sale.order.list.select.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_sale"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='to_invoice']" position="replace">
                <filter name="pending" string="Pending" domain="[('invoice_state','=','pending')]" />
            </xpath>
            <xpath expr="//filter[@name='upselling']" position="replace">
                <filter name="to_invoice2" string="To Invoice" domain="[('invoice_state','=','to_invoice')]" />
                <filter name="invoiced" string="Invoiced" domain="[('invoice_state','=','invoiced')]" />
            </xpath>
        </field>
    </record>

    <record id="model_sale_order_action_to_invoice" model="ir.actions.server">
        <field name="name">To Invoice</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_view_types">form,list</field>
        <field name="state">code</field>
        <field name="code">action = records.action_to_invoice()</field>
    </record>


    <record id="view_order_line_tree_qm" model="ir.ui.view">
      <field name="name">sale.order.line.tree.inherit</field>
      <field name="model">sale.order.line</field>
      <field name="inherit_id" ref="sale.view_order_line_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//tree" position="attributes">
          <attribute name="decoration-success">
            qty_to_receipt == 0
          </attribute>
        </xpath>
        <field name="salesman_id" position="after">
          <field name="price_unit"/>
        </field>
        <field name="qty_invoiced" position="replace">
          <field name="qty_receipt"/>
        </field>
        <field name="qty_to_invoice" position="replace">
          <field name="qty_to_receipt"/>
        </field>
      </field>
    </record>

    <record id="sale_order_line_view_form_readonly_qm" model="ir.ui.view">
      <field name="name">sale.order.line.form.readonly.qm</field>
      <field name="model">sale.order.line</field>
      <field name="inherit_id" ref="sale.sale_order_line_view_form_readonly"/>
      <field name="arch" type="xml">
        <field name="qty_invoiced" position="replace">
          <field name="qty_receipt"/>
          <field name="qty_to_receipt"/>
        </field>
      </field>
    </record>

    <!-- 可以使用search_view_id -->
    <record id="action_order_lines_to_receipt" model="ir.actions.act_window">
      <field name="name">Orders to Receipt</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">sale.order.line</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'create': False}</field>
      <field name="view_id" ref="view_order_line_tree_qm"/>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          No orders to invoice found
        </p>
        <p>
          You can select all order lines and invoice them in batch, <br/>
          or check every order and invoice them one by one
        </p>
      </field>
    </record>

    <record id="action_create_sale_receipt_from_sale_lines" model="ir.actions.server">
      <field name="name">Create Sale Receipt</field>
      <field name="model_id" ref="account.model_account_move"/>
      <field name="binding_model_id" ref="sale.model_sale_order_line"/>
      <field name="binding_view_types">list</field>
      <field name="state">code</field>
      <field name="code">
        action = model.action_create_receipt()
      </field>
    </record>

    <menuitem action="action_order_lines_to_receipt"
              id="menu_order_lines_to_receipt_action"
              parent="sale.menu_sale_invoicing"
              sequence="0" active="True"/>

    <menuitem id="menu_action_move_out_receipt_type_qm"
              action="sale.menu_action_move_out_receipt_type"
              parent="account.menu_finance_receivables" sequence="1"/>

    <record id="sale.menu_sale_order_invoice" model="ir.ui.menu">
      <field name="groups_id" eval="[(6,0,[ref('qm.group_hidden_menu')])]"/> 
    </record>

    <record id="sale.menu_sale_order_upselling" model="ir.ui.menu">
      <field name="groups_id" eval="[(6,0,[ref('qm.group_hidden_menu')])]"/>
    </record>

    <!-- 后续隐藏 -->
    <!-- <record id="sale.model_sale_order_action_quotation_sent" model="ir.actions.server"> -->
    <!--   <field name="groups_id" eval="[(6,0,[ref('qm.group_hidden_menu')])]"/> -->
    <!-- </record> -->
    
    <data noupdate="1">
        <delete model="ir.actions.server" search="[('id','=',ref('sale.model_sale_order_action_quotation_sent'))]"/>
    </data>

</odoo>
