<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tax_classification_form" model="ir.ui.view">
            <field name="name">tax.classification.form</field>
            <field name="model">tax.classification</field>
            <field name="arch" type="xml">
                <form string="Tax Classification">
                    <group>
                        <group>
                            <field name="name" weight="1"/>
                            <field name="code"/>
                            <field name="code18"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_tax_classification_tree" model="ir.ui.view">
            <field name="name">tax.classification.tree</field>
            <field name="model">tax.classification</field>
            <field name="arch" type="xml">
                <tree string="Tax Classification">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="code18"/>
                </tree>
            </field>
        </record>

        <record id="view_tax_classification_search" model="ir.ui.view">
            <field name="name">tax.classification.tree</field>
            <field name="model">tax.classification</field>
            <field name="arch" type="xml">
                <search string="Search Tax Classification">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="code18"/>
                </search>
            </field>
        </record>

        <record id="action_tax_classification_form" model="ir.actions.act_window">
            <field name="name">Tax Classification</field>
            <field name="res_model">tax.classification</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_tax_classification_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new tax classification
                </p>
            </field>
        </record>

        <menuitem action="action_tax_classification_form" id="menu_action_tax_classification_form" parent="account.account_invoicing_menu" sequence="3"/>
    </data>
</odoo>